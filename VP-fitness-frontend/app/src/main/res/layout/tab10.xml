<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:padding="30dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:text="Create an Account"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        android:paddingTop="16dp"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/username_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/edit_text_background"
            android:fontFamily="sans-serif"
            android:hint="Username"
            android:maxLines="1"
            android:paddingLeft="12dp"
            android:textSize="20sp"
            app:met_baseColor="@android:color/white"
            app:met_errorColor="@android:color/white"
            app:met_floatingLabel="normal"
            app:met_floatingLabelText="Full name"
            app:met_primaryColor="@android:color/white" />

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:background="@drawable/edit_text_background"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Default character asset here"
                android:textColor="@android:color/white"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:padding="16dp"
                android:textSize="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/confirm_linear_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/onboarding_option"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_marginTop="32dp"
            android:layout_gravity="center_horizontal"
            android:clickable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I have a gym membership (Select all)"
                android:textColor="@android:color/white"
                android:textSize="16sp"/>

        </LinearLayout>

</LinearLayout>
