<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="30dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:text="@string/personal_title"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        android:paddingTop="16dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/year_slider"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:layout_weight="1"/>

        <TextView
            android:text="2001"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/yearTextView"
            android:layout_weight="0"/>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_arrow_down"
        android:id="@+id/imageView2"
        />

    <com.vptechnologies.vpfancyslider.FancySlider
        android:id="@+id/yearBornSlider"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        app:tickColor="@android:color/white"
        app:minimumValue="1940"
        app:maximumValue="2018"
        app:smallTickPrecision="1"
        app:largeTickPrecision="5"
        app:smallTickHeight="0.6"
        app:tickDistance="40"
        app:tickLineWidth="7"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/weight_slider"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:layout_weight="1"/>

        <TextView
            android:text="185"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/weightTextView"
            android:layout_weight="0"/>

        <TextView
            android:text="@string/weight_units"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:layout_weight="0"
            android:layout_marginLeft="8dp"
            android:textSize="16sp"
            android:textColor="@color/opaqueWhite"/>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_arrow_down"
        android:id="@+id/imageView3"
        />

    <com.vptechnologies.vpfancyslider.FancySlider
        android:id="@+id/weightSlider"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        app:tickColor="@android:color/white"
        app:minimumValue="40"
        app:maximumValue="500"
        app:smallTickPrecision="1"
        app:largeTickPrecision="5"
        app:smallTickHeight="0.6"
        app:tickDistance="40"
        app:tickLineWidth="7"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/height_slider"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:layout_weight="1"/>

        <TextView
            android:text="5"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/heightOneTextView"
            android:layout_weight="0"/>

        <TextView
            android:text="@string/height_first_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView10"
            android:layout_weight="0"
            android:textSize="16sp"
            android:textColor="@color/opaqueWhite"
            android:layout_marginLeft="8dp"/>

        <TextView
            android:text="10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/heightTwoTextView"
            android:layout_weight="0"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:layout_marginLeft="16dp"/>

        <TextView
            android:text="@string/height_second_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            android:layout_weight="0"
            android:textSize="16sp"
            android:textColor="@color/opaqueWhite"
            android:layout_marginLeft="8dp"/>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_arrow_down"
        android:id="@+id/imageView4"
        />

    <com.vptechnologies.vpfancyslider.FancySlider
        android:id="@+id/heightSlider"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        app:tickColor="@android:color/white"
        app:minimumValue="1"
        app:maximumValue="108"
        app:smallTickPrecision="1"
        app:largeTickPrecision="6"
        app:smallTickHeight="0.6"
        app:tickDistance="40"
        app:tickLineWidth="7"
        />

</LinearLayout>
